                    <Image.TranslationY>
                        <OnPlatform
                            x:TypeArguments="x:Double"
                            Android="25"
                            iOS="75" />
                    </Image.TranslationY>
                </Image>-->
            </Grid>

            <!--  Security  -->
            <Label Style="{StaticResource SubHeader}" Text="Security" />
            <CarouselView
                x:Name="SecuritySection"
                HeightRequest="150"
                HorizontalScrollBarVisibility="Never"
                ItemsSource="{Binding Rooms}"
                PeekAreaInsets="40"
                WidthRequest="100">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <pancakeview:PancakeView CornerRadius="10" HorizontalOptions="Fill">
                            <pancakeview:PancakeView.Shadow>
                                <pancakeview:DropShadow Offset="1,1" Color="DarkGray" />
                            </pancakeview:PancakeView.Shadow>
                            <Grid>
                                <Image Aspect="AspectFill" Source="{Binding ImageLabel}" />
                                <Label
                                    Margin="5"
                                    Padding="5"
                                    HorizontalOptions="Start"
                                    Style="{StaticResource TagLabel}"
                                    Text="{Binding RoomLabel}"
                                    VerticalOptions="Start" />
                            </Grid>
                        </pancakeview:PancakeView>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>
        <!--  Bottom Tab Layout  -->
        <ScrollView
            Grid.Row="1"
            Margin="20,20,20,40"
            HorizontalScrollBarVisibility="Never"
            Orientation="Horizontal">
            <StackLayout Orientation="Horizontal" Spacing="20">
                <StackLayout Orientation="Vertical">
                    <BoxView
                        BackgroundColor="{StaticResource WhiteColor}"
                        HeightRequest="2"
                        WidthRequest="130" />
                    <Label Style="{StaticResource TabHeader}" Text="Kitchen" />
                    <Label
                        Margin="0,-5,0,0"
                        Style="{StaticResource BodyText}"
                        Text="5 Active Devices"
                        TextColor="{StaticResource WhiteColor}" />
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <BoxView
                        BackgroundColor="{StaticResource UnselectedTabTextColor}"
                        HeightRequest="2"
                        WidthRequest="130" />
                    <Label Style="{StaticResource UnselectedTabHeader}" Text="Study" />
                    <Label
                        Margin="0,-5,0,0"
                        Style="{StaticResource UnselectedTabText}"
                        Text="2 Active Devices"
                        TextColor="{StaticResource UnselectedTabTextColor}" />
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <BoxView
                        BackgroundColor="{StaticResource UnselectedTabTextColor}"
                        HeightRequest="2"
                        WidthRequest="130" />
                    <Label Style="{StaticResource UnselectedTabHeader}" Text="Lounge" />
                    <Label
                        Margin="0,-5,0,0"
                        Style="{StaticResource UnselectedTabText}"
                        Text="1 Active Devices"
                        TextColor="{StaticResource UnselectedTabTextColor}" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>


